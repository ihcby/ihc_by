- if controller_name != 'sessions'
  .row
    .col-sm-12
      = link_to "Вход", new_session_path(resource_name)
- if devise_mapping.registerable? && controller_name != 'registrations'
  .row
    .col-sm-12
      = link_to "Регистрация", new_registration_path(resource_name)
- if devise_mapping.recoverable? && controller_name != 'passwords'
  .row
    .col-sm-12
      = link_to "Забыли пароль?", new_password_path(resource_name)
- if devise_mapping.confirmable? && controller_name != 'confirmations'
  .row
    .col-sm-12
      = link_to "Не получили инструкцию для активации?", new_confirmation_path(resource_name)
- if devise_mapping.lockable? && resource_class.unlock_strategy_enabled?(:email) && controller_name != 'unlocks'
  .col-sm-12
    = link_to "Не получили инструкцию для разблокировки?", new_unlock_path(resource_name)

- if false && devise_mapping.omniauthable?
  .row
    .col-sm-12
      - resource_class.omniauth_providers.each do |provider|
        = link_to "Войти через #{provider.to_s.titleize}", omniauth_authorize_path(resource_name, provider)
